@page "/pokemon"

<PageTitle>
    Michael Bond - Pokémon
</PageTitle>

<MudText Typo="@Typo.h3">
    My Pokémon Info
</MudText>

<MudStack Spacing="2">
    <MudPaper Outlined="@true">
        <MudStack Spacing="2"
                  Class="ma-2">
            <MudText Typo="@Typo.h4">
                Nintendo Switch Friend Code:
            </MudText>
            <MudText Typo="@Typo.h5">
                SW-4666-0665-3400
            </MudText>
        </MudStack>
    </MudPaper>


    <MudPaper Outlined="@true">
        <MudStack Spacing="2"
                  Class="ma-2">
            <MudText Typo="@Typo.h4">
                I have <strong>Pokémon Violet</strong>, in-game name: Mike
            </MudText>
        </MudStack>
    </MudPaper>

    <MudPaper Outlined="@true">
        <MudStack Spacing="2"
                  Class="ma-2">
            <MudText Typo="@Typo.h4">
                Pokémon Home Friend Code:
            </MudText>
            <MudText Typo="@Typo.h5">
                UFBJTSXDLGJG (or scan the below QR code)
            </MudText>
            <MudImage Src="images/PokemonHomeFriendCode.png"
                      Alt="My Pokémon Home Friend Code"
                      title="My Pokémon Home Friend Code"
                      Width="200" />
        </MudStack>
    </MudPaper>

    <MudPaper Outlined="@true">
        <MudStack Spacing="2"
                  Class="ma-2">
            <MudText Typo="@Typo.h4">
                Pokémon GO Friend Code
            </MudText>
            <MudText Typo="@Typo.h5">
                6226 8310 1651 (or scan the below QR code)
            </MudText>
            <MudImage Src="images/PokemonGOFriendCode.png"
                      Alt="My Pokémon GO Friend Code"
                      title="My Pokémon GO Friend Code"
                      Width="250" />
        </MudStack>
    </MudPaper>
</MudStack>
