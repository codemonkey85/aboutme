@page "/Blog"

<PageTitle>
    @Constants.SiteName - Blog
</PageTitle>

<MudText Typo="@Typo.h3">
    Blog
</MudText>

@if (IsLoading)
{
    <MudText>
        Loading...
    </MudText>
}
else if (!Posts.Any())
{
    <MudText>
        No posts found.
    </MudText>
}
else
{
    <MudText>
        View more at
        <MudLink Href="https://micro.bondcodes.com"
                 Target="_blank">
            micro.bondcodes.com
        </MudLink>
        (powered by
        <MudLink Href="https://micro.blog/"
                 Target="_blank">
            Micro.blog
        </MudLink>
        )
    </MudText>

    <MudStack>
        @foreach (var post in Posts)
        {
            <MudCard>
                <MudCardHeader>
                    <MudText Typo="Typo.h6">
                        <a href="@post.Url"
                           target="_blank">
                            @post.Title
                        </a>
                    </MudText>
                </MudCardHeader>
                <MudCardContent>
                    <div class="content-wrapper">
                        @(new MarkupString(post.ContentHtml))
                    </div>
                </MudCardContent>
                <MudCardActions>
                    <MudText Typo="Typo.subtitle2">
                        <a href="@post.Url"
                           target="_blank">
                            @post.DatePublished.ToLocalTime().ToString(DateFormat)
                        </a>
                    </MudText>
                </MudCardActions>
            </MudCard>
        }
    </MudStack>
}

<style>
    .content-wrapper img {
        max-width: 100%;
        height: auto;
        display: block;
    }
</style>
