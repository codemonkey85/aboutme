@page "/contact"

<PageTitle>
    Michael Bond - Contact
</PageTitle>

<MudText Typo="@Typo.h3">
    Contact Me
</MudText>

<MudStack>
    @foreach (var contactUrl in ContactUrlsList)
    {
        <MudCard>
            <MudCardHeader>
                <MudText Typo="@Typo.h5">
                    @contactUrl.Name
                </MudText>
            </MudCardHeader>
            <MudCardActions Class="d-flex gap-4">
                <MudButton StartIcon="@Icons.Material.Filled.OpenInBrowser"
                           Variant="Variant.Filled"
                           title="@contactUrl.Title"
                           Href="@contactUrl.Url"
                           Target="_blank">
                    Open
                </MudButton>
            </MudCardActions>
        </MudCard>
    }
</MudStack>
